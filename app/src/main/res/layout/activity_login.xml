<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginGoogleButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="101dp"
        android:background="#C1C5C1"
        android:backgroundTint="#DFDEDE"
        android:gravity="center"
        android:text="Sign in with Google"
        android:textColor="#474747"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/logoImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/googleImageView"
        android:layout_width="31dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="195dp"
        android:layout_marginBottom="261dp"
        app:layout_constraintBottom_toTopOf="@+id/logoImageView"
        app:layout_constraintEnd_toStartOf="@+id/loginGoogleButton"
        app:layout_constraintStart_toStartOf="@+id/loginGoogleButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="311dp"
        android:layout_height="143dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="102dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googleImageView"
        app:srcCompat="@mipmap/reitoria_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>

